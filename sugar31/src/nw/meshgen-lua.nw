<<functions>>=
void lua_meshgen_register(lua_State* L, mesh_t mesh)
{
    lua_getglobals(L);
    lua_meshgen_add_table(L, mesh);
    lua_pop(L,1);
}

void lua_meshgen_unregister(lua_State* L)
{
    lua_getglobals(L);
    lua_meshgen_rm_table(L);
    lua_pop(L,1);
}

