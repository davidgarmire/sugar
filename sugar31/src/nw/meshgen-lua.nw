<<static functions>>=
static void postload(lua_State* L)
{
    int i, n;
    lua_getglobal(L, "_postload");

    n = lua_getn(L, -1);
    for (i = 0; i < n; ++i) {
        lua_rawgeti(L, -1, i+1);
        if (lua_isstring(L,-1))
            lua_dostring(L, lua_tostring(L,-1));
        lua_pop(L,1);
    }
    lua_pop(L,1);
}

